{
  "name": "remote-faces-web",
  "description": "A small app to share webcam still images periodically",
  "version": "1.0.0",
  "private": true,
  "author": "Daishi Kato",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test:app": "jest",
    "test:lint": "eslint --ext .js,.ts,.tsx src",
    "test:type": "tsc --noEmit",
    "test": "yarn test:lint && yarn test:type && yarn test:app"
  },
  "homepage": "./",
  "dependencies": {
    "@ckeditor/ckeditor5-react": "^5.0.2",
    "@daishi/ckeditor5-build-inline-custom": "^24.0.0-custom.1",
    "dompurify": "^2.4.0",
    "emoji-mart": "3.0.1",
    "ipfs": "^0.65.0",
    "ipfs-pubsub-room": "^3.0.0",
    "pako": "^2.0.4",
    "peerjs": "^1.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "valtio": "1.7.2",
    "valtio-yjs": "^0.4.0",
    "wgo": "^3.0.0-alpha.10",
    "yjs": "^13.5.42"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/dompurify": "^2.3.4",
    "@types/emoji-mart": "^3.0.9",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/pako": "^2.0.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/w3c-image-capture": "^1.0.7",
    "@vitejs/plugin-react": "^2.2.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "vite": "^3.2.2"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|sass)$": "identity-obj-proxy"
    }
  },
  "browserslist": {
    "production": [
      "chrome >= 67",
      "edge >= 79",
      "firefox >= 68",
      "opera >= 54",
      "safari >= 14"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
