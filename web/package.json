{
  "name": "remote-faces-web",
  "description": "A small app to share webcam still images periodically",
  "version": "1.0.0",
  "private": true,
  "author": "Daishi Kato",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:app": "react-scripts test",
    "test:lint": "eslint --ext .js,.ts,.tsx src",
    "test:type": "tsc --noEmit",
    "test": "yarn test:lint && yarn test:type && yarn test:app --watchAll=false",
    "eject": "react-scripts eject"
  },
  "homepage": "./",
  "dependencies": {
    "@ckeditor/ckeditor5-react": "^3.0.3",
    "@daishi/ckeditor5-build-inline-custom": "^24.0.0-custom.1",
    "dompurify": "^2.3.4",
    "emoji-mart": "^3.0.1",
    "ipfs": "^0.61.0",
    "ipfs-pubsub-room": "npm:@daishi/ipfs-pubsub-room@^2.0.1-custom.3",
    "pako": "^2.0.4",
    "peerjs": "^1.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "valtio": "https://pkg.csb.dev/pmndrs/valtio/commit/52c3c148/valtio",
    "wgo": "^3.0.0-alpha.10",
    "yjs": "^13.5.23"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/dompurify": "^2.3.2",
    "@types/emoji-mart": "^3.0.9",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@types/pako": "^1.0.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/w3c-image-capture": "^1.0.5",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1",
    "react-scripts": "^5.0.0",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "airbnb",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "no-console": "off",
      "import/prefer-default-export": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "never"
      ],
      "react/state-in-constructor": "off",
      "jsx-a11y/media-has-caption": "off",
      "jsx-a11y/label-has-associated-control": "off",
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "no-undef": "off",
      "no-shadow": "off",
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.*",
          "src/setupTests.ts"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      },
      {
        "files": [
          "src/network/peerjsRoom.ts",
          "src/network/ipfsRoom.ts",
          "src/network/pubsubRoom.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-restricted-syntax": "off"
        }
      },
      {
        "files": [
          "src/components/MomentaryChat.tsx"
        ],
        "rules": {
          "react/no-danger": "off"
        }
      },
      {
        "files": [
          "src/react-app-env.d.ts",
          "src/serviceWorker.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-param-reassign": "off",
          "spaced-comment": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
