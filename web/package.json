{
  "name": "remote-faces-web",
  "description": "A small app to share webcam still images periodically",
  "version": "1.0.0",
  "private": true,
  "author": "Daishi Kato",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:app": "react-scripts test",
    "test:lint": "eslint --ext .js,.ts,.tsx src",
    "test:type": "tsc --noEmit",
    "test": "yarn test:lint && yarn test:type && yarn test:app --watchAll=false",
    "eject": "react-scripts eject"
  },
  "homepage": "./",
  "dependencies": {
    "@ckeditor/ckeditor5-react": "^4.0.0",
    "@daishi/ckeditor5-build-inline-custom": "^24.0.0-custom.1",
    "dompurify": "^2.4.0",
    "emoji-mart": "3.0.1",
    "ipfs": "^0.64.0",
    "ipfs-pubsub-room": "^3.0.0",
    "pako": "^2.0.4",
    "peerjs": "^1.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "valtio": "^1.7.0",
    "valtio-yjs": "^0.3.1",
    "wgo": "^3.0.0-alpha.10",
    "yjs": "^13.5.41"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/dompurify": "^2.3.4",
    "@types/emoji-mart": "^3.0.9",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.15",
    "@types/pako": "^2.0.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/w3c-image-capture": "^1.0.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.7",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "react-scripts": "^5.0.1",
    "stream-browserify": "^3.0.0",
    "typescript": "^4.8.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "no-console": "off",
      "import/prefer-default-export": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "never"
      ],
      "react/state-in-constructor": "off",
      "jsx-a11y/media-has-caption": "off",
      "jsx-a11y/label-has-associated-control": "off",
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "no-undef": "off",
      "no-shadow": "off",
      "react/react-in-jsx-scope": "off",
      "no-param-reassign": "off",
      "no-alert": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.*",
          "src/setupTests.ts"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      },
      {
        "files": [
          "src/network/peerjsRoom.ts",
          "src/network/ipfsRoom.ts",
          "src/network/pubsubRoom.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-restricted-syntax": "off"
        }
      },
      {
        "files": [
          "src/components/MomentaryChat.tsx"
        ],
        "rules": {
          "react/no-danger": "off"
        }
      },
      {
        "files": [
          "src/react-app-env.d.ts",
          "src/serviceWorker.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-param-reassign": "off",
          "spaced-comment": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      "chrome >= 67",
      "edge >= 79",
      "firefox >= 68",
      "opera >= 54",
      "safari >= 14"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
