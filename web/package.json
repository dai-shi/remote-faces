{
  "name": "remote-faces-web",
  "description": "A small app to share webcam still images periodically",
  "version": "1.0.0",
  "private": true,
  "author": "Daishi Kato",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:app": "react-scripts test --env=jsdom-sixteen",
    "test:lint": "eslint --ext .js,.ts,.tsx src",
    "test:type": "tsc --noEmit",
    "test": "yarn test:lint && yarn test:type && yarn test:app --watchAll=false",
    "eject": "react-scripts eject"
  },
  "homepage": "./",
  "dependencies": {
    "@ckeditor/ckeditor5-react": "^2.1.0",
    "@daishi/ckeditor5-build-inline-custom": "^19.0.0-custom.4",
    "dompurify": "^2.0.12",
    "emoji-mart": "^3.0.0",
    "ipfs": "^0.48.0",
    "ipfs-pubsub-room": "npm:@daishi/ipfs-pubsub-room@^2.0.1-custom.2",
    "pako": "^1.0.11",
    "peerjs": "^1.3.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "wgo": "waltheri/wgo.js#v3.0.0-alpha.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@testing-library/user-event": "^12.0.11",
    "@types/dompurify": "^2.0.2",
    "@types/emoji-mart": "^3.0.2",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/pako": "^1.0.1",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/w3c-image-capture": "^1.0.2",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "prettier": "^2.0.5",
    "react-scripts": "3.4.1",
    "typescript": "~3.9.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "no-console": "off",
      "import/prefer-default-export": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "never"
      ],
      "react/state-in-constructor": "off",
      "jsx-a11y/media-has-caption": "off",
      "jsx-a11y/label-has-associated-control": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.*",
          "src/setupTests.ts"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      },
      {
        "files": [
          "src/network/peerjsRoom.ts",
          "src/network/ipfsRoom.ts",
          "src/network/pubsubRoom.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-restricted-syntax": "off"
        }
      },
      {
        "files": [
          "src/components/MomentaryChat.tsx"
        ],
        "rules": {
          "react/no-danger": "off"
        }
      },
      {
        "files": [
          "src/react-app-env.d.ts",
          "src/serviceWorker.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-param-reassign": "off",
          "spaced-comment": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
