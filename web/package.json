{
  "name": "remote-faces-web",
  "description": "A small app to share webcam still images periodically",
  "version": "1.0.0",
  "private": true,
  "author": "Daishi Kato",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:app": "react-scripts test --env=jsdom-sixteen",
    "test:lint": "eslint --ext .js,.ts,.tsx src",
    "test:type": "tsc --noEmit",
    "test": "yarn test:lint && yarn test:type && yarn test:app --watchAll=false",
    "eject": "react-scripts eject"
  },
  "homepage": "./",
  "dependencies": {
    "@ckeditor/ckeditor5-react": "^3.0.0",
    "@daishi/ckeditor5-build-inline-custom": "^24.0.0-custom.1",
    "@react-three/drei": "^2.2.12",
    "dompurify": "^2.2.3",
    "emoji-mart": "^3.0.0",
    "ipfs": "^0.52.2",
    "ipfs-pubsub-room": "npm:@daishi/ipfs-pubsub-room@^2.0.1-custom.2",
    "pako": "^2.0.2",
    "peerjs": "^1.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-three-fiber": "^5.3.10",
    "react-use-gesture": "^8.0.1",
    "three": "^0.123.0",
    "valtio": "^0.7.1",
    "wgo": "^3.0.0-alpha.7",
    "yjs": "^13.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "@types/dompurify": "^2.0.4",
    "@types/emoji-mart": "^3.0.4",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.13",
    "@types/pako": "^1.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/w3c-image-capture": "^1.0.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "prettier": "^2.2.1",
    "react-scripts": "4.0.1",
    "typescript": "~4.1.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "no-console": "off",
      "import/prefer-default-export": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "never"
      ],
      "react/state-in-constructor": "off",
      "jsx-a11y/media-has-caption": "off",
      "jsx-a11y/label-has-associated-control": "off",
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "no-undef": "off",
      "no-shadow": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.*",
          "src/setupTests.ts"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      },
      {
        "files": [
          "src/network/peerjsRoom.ts",
          "src/network/ipfsRoom.ts",
          "src/network/pubsubRoom.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-restricted-syntax": "off"
        }
      },
      {
        "files": [
          "src/components/MomentaryChat.tsx"
        ],
        "rules": {
          "react/no-danger": "off"
        }
      },
      {
        "files": [
          "src/react-app-env.d.ts",
          "src/serviceWorker.ts"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-param-reassign": "off",
          "spaced-comment": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
